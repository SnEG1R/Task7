@model Guid

<link rel="stylesheet" href="~/css/tic-tac-toe/tic-tac-toe-page.css">

<div class="container main-container">
    <div class="text-white mb-3 fs-3 fw-bold">
        <div class="turning-player">awdwd</div>
    </div>
    <div class="tic-tac-toe-container">
        <div class="row">
            <div class="col cell" id="0" onclick="move(this)"></div>
            <div class="col cell" id="1" onclick="move(this)"></div>
            <div class="col cell" id="2" onclick="move(this)"></div>
        </div>
        <div class="row">
            <div class="col cell" id="3" onclick="move(this)"></div>
            <div class="col cell" id="4" onclick="move(this)"></div>
            <div class="col cell" id="5" onclick="move(this)"></div>
        </div>
        <div class="row">
            <div class="col cell" id="6" onclick="move(this)"></div>
            <div class="col cell" id="7" onclick="move(this)"></div>
            <div class="col cell" id="8" onclick="move(this)"></div>
        </div>
    </div>
    
    <div class="footer-btn-container mt-2" style="display: none">
        <div class="btn-exit me-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
            </svg>
        </div>
        <div class="btn-anew ms-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
            </svg>
        </div>
    </div>
</div>

<div class="loader position-absolute w-100 h-100 top-0 bg-dark bg-opacity-75 d-flex justify-content-center align-items-center">
    <div class="btn bg-light">
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        <span>Waiting for the second player... <br></span>
        Connection code - <span style="user-select: all">@Model</span>
    </div>
</div>

<div class="winner-info-container position-absolute bg-dark bg-opacity-75 w-100 h-100 top-0 justify-content-center align-items-center" style="display: none;">
    <div class="card position-absolute border-secondary mb-3" style="max-width: 18rem;">
        <div class="card-header">{win}</div>
        <div class="card-body text-secondary">
            <h5 class="card-title">Winner - {winner}</h5>
            <p class="card-text">
                <button type="button" onclick="restartGame()" class="btn btn-restart-game btn-outline-success mt-4 w-100">Play more</button>
            </p>
        </div>
    </div>
</div>

<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/game.hub.control.js"></script>
<script src="~/js/player.hub.control.js"></script>
<script src="~/js/game.js"></script>
<script src="~/js/main.js"></script>
<script>
</script>